{
  "extends": [
    ":semanticCommitTypeAll(chore)",
    "config:recommended",
    "group:allNonMajor",
    "schedule:earlyMondays"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "dependencyDashboardApproval": true,
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeStrategy": "squash"
    }
  ]
}
