---
const nav = [
  {
    link: "/",
    text: "About",
  },
  {
    link: "/",
    text: "Skills",
  },
  {
    link: "/",
    text: "Twitter",
  },
  {
    link: "/",
    text: "Github",
  },
]

const astro = {
  link: "https://astro.build",
  text: "Astro",
}
const tailwind = {
  link: "https://react.dev",
  text: "React",
}
const netlify = {
  link: "https://www.netlify.com",
  text: "Netlify",
}
---

<footer>
  <div class="container mx-auto max-w-2xl px-4 pb-4 md:px-0">
    <div class="mx-auto mb-12 border-b border-slate-400"></div>
    <nav class="mb-4">
      {
        nav.map((item) => (
          <a class="pr-3 font-medium text-slate-400" href={item.link}>
            {item.text}
          </a>
        ))
      }
    </nav>
    <p class="text-sm text-slate-400">
      <span class="mr-1">
        Build with
        <a href={astro.link}>{astro.text}</a> &
        <a href={tailwind.link}>{tailwind.text}</a>
      </span>
      <span>
        | Powered by
        <a href={netlify.link}>{netlify.text}</a>
      </span>
    </p>
  </div>
</footer>
