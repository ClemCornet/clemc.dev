---
export interface Props {
  title: string
  skills: string[]
  style: string
}

const { title, skills, style } = Astro.props
---

<div
  class={`${style} rounded-lg border-2 border-slate-400 dark:border-slate-500 dark:bg-slate-800 bg-slate-100 p-4 cursor-default`}
>
  <h3 class="mb-4 text-xl font-semibold text-slate-600 dark:text-slate-200">
    {title}
  </h3>
  <div class="flex flex-wrap">
    {
      skills.map((skill) => (
        <div class="mx-1 my-2 rounded-full bg-slate-200 px-2 font-medium text-slate-600 dark:bg-blue/60 dark:text-slate-200">
          {skill}
        </div>
      ))
    }
  </div>
</div>
