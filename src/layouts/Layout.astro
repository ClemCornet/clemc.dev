---
import "../styles/main.css"
import TheNavigation from "../components/TheNavigation.astro"
import { TopNavigation } from "../components/TopNavigation"
export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="h-full bg-slate-100 dark:bg-[radial-gradient(ellipse_at_bottom_right,_var(--tw-gradient-stops))] dark:from-blue dark:via-slate-800 dark:via-55% dark:to-black dark:to-100%"
  >
    <TheNavigation />
    <TopNavigation client:load />
    <slot />
  </body>
</html>
