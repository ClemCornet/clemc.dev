---
import Layout from "../layouts/Layout.astro"
import Posts from "../components/Posts.astro"
---

<Layout title="Welcome to Astro.">
  <main
    class="container mx-auto mt-24 mt-6 h-[calc(100vh-370px)] max-w-2xl px-4 md:mt-40 md:px-0"
  >
    <Posts />
    <div class="flex animate-pulse space-x-4">
      <div class="flex-1">
        <div class="mb-6 grid grid-cols-3 gap-4">
          <div class="col-span-1 h-3 rounded bg-slate-400 dark:bg-slate-500">
          </div>
          <div class="col-span-2 h-3 rounded bg-slate-400 dark:bg-slate-500">
          </div>
        </div>
        <div class="mb-6 grid grid-cols-3 gap-4">
          <div class="col-span-1 h-3 rounded bg-slate-400 dark:bg-slate-500">
          </div>
          <div class="col-span-2 h-3 rounded bg-slate-400 dark:bg-slate-500">
          </div>
        </div>
        <div class="mb-6 grid grid-cols-3 gap-4">
          <div class="col-span-1 h-3 rounded bg-slate-400 dark:bg-slate-500">
          </div>
          <div class="col-span-2 h-3 rounded bg-slate-400 dark:bg-slate-500">
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
